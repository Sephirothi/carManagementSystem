<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- 指定连接数据库所用的驱动 -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<!-- 指定连接数据库的url,其中hibernate是本应用连接的数据库名 -->
		<property name="connection.url">jdbc:mysql://127.0.0.1/car_manage</property>
		<!-- 指定连接数据库的用户名和密码 -->
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="hibernate.c3p0.max_size">30</property>
		<property name="hibernate.c3p0.min_size">1</property>
		<!-- 指定连接池里面最大缓存多少个Statement对象 -->
		<property name="hibernate.c3p0.timeout">5000</property>
		<property name="hibernate.c3p0.max_statements">100</property>
		<property name="hibernate.c3p0.idle_test_period">3000</property>
		<property name="hibernate.c3p0.acquire_incerment">2</property>
		<!-- 指定数据库方言 -->
		<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<!-- 根据需要自动创建数据表 -->
		<property name="hbm2ddl.auto">update</property>
		<!-- 显示Hibernate持久化操作所生成的SQL -->
		<property name="show_sql">true</property>
		<!-- 将SQL脚本进行格式化后在输出 -->
		<property name="hibernate.format_sql">true</property>
		<!-- 罗列所有持久化类的类名 -->
		<mapping class="com.cqupt.carManage.model.entity.Owner"/>
		<mapping class="com.cqupt.carManage.model.entity.Car"/>
		<mapping class="com.cqupt.carManage.model.entity.ChangeOwner"/>
		<mapping class="com.cqupt.carManage.model.entity.Charge"/>
		<mapping class="com.cqupt.carManage.model.entity.Picture"/>
		<mapping class="com.cqupt.carManage.model.entity.User"/>
		
	</session-factory>
</hibernate-configuration>